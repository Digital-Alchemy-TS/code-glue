{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "alwaysStrict": false,
    "noEmit": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strictNullChecks": false,
  },
  "include": [
    "src/**/*.mts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.contract-test.mts",
    "dist"
  ]
}
